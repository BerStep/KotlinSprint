fun main() {
    var moveFromWhereBlack = "E2"
    var moveToWhereBlack = "E4"
    var strokeNumber = 1

    var historyOfMoves = "Вы походили с $moveFromWhereBlack на $moveToWhereBlack; номер хода: $strokeNumber."

    println(historyOfMoves)

    moveFromWhereBlack = "D2"
    moveToWhereBlack = "D3"
    strokeNumber += 1
    historyOfMoves = "Вы походили с $moveFromWhereBlack на $moveToWhereBlack; номер хода: $strokeNumber."

    println(historyOfMoves)
}
